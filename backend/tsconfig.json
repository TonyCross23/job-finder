{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowImportingTsExtensions": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}